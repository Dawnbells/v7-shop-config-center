{
  "tabs": [
    {
      "name": "email",
      "label": "邮箱设置",
      "description": "邮箱设置",
      "prefix": "email",
      "default-values": {
        "open": false,
        "host": "",
        "port": 587,
        "username": "",
        "password": "",
        "from": "",
        "secure": false,
        "connection-timeout": 5000,
        "timeout": 5000,
        "write-timeout": 5000,
        "subject": "",
        "content": ""
      }
    },
    {
      "name": "email-template",
      "label": "邮件模板",
      "description": "邮件模板",
      "prefix": "email-template",
      "i18n": true,
      "default-values": {
        "subject": "",
        "content": ""
      }
    }
  ],
  "email": {
    "open": {
      "type": "boolean",
      "label": "开启邮件通知",
      "description": "是否开启邮件通知",
      "required": false
    },
    "host": {
      "type": "string",
      "label": "SMTP服务器地址",
      "description": "SMTP服务器地址，用于发送邮件",
      "required": true
    },
    "port": {
      "type": "number",
      "label": "端口",
      "description": "SMTP服务器端口号",
      "required": true
    },
    "username": {
      "type": "string",
      "label": "用户名",
      "description": "邮箱用户名，用于SMTP认证",
      "required": true
    },
    "password": {
      "type": "string",
      "label": "密码",
      "description": "邮箱密码，用于SMTP认证",
      "required": true
    },
    "from": {
      "type": "string",
      "label": "发件人地址",
      "description": "发件人邮箱地址",
      "required": true
    },
    "secure": {
      "type": "boolean",
      "label": "使用SSL/TLS加密",
      "description": "是否启用SSL/TLS加密连接",
      "required": false
    },
    "connection-timeout": {
      "type": "number",
      "label": "连接超时时间（毫秒）",
      "description": "建立 SMTP 连接的超时时间，单位毫秒",
      "required": false
    },
    "timeout": {
      "type": "number",
      "label": "请求超时时间（毫秒）",
      "description": "SMTP 请求/响应的超时时间，单位毫秒",
      "required": false
    },
    "write-timeout": {
      "type": "number",
      "label": "写入超时时间（毫秒）",
      "description": "SMTP 写入数据的超时时间，单位毫秒",
      "required": false
    }
  },
  "email-template": {
    "subject": {
      "type": "string",
      "label": "邮件主题",
      "description": "邮件主题",
      "required": true
    },
    "content": {
      "type": "html",
      "label": "邮件模板",
      "description": "邮件模板，支持HTML格式",
      "required": true,
      "placeholders": {
        "name": {
          "type": "string",
          "label": "客户姓名",
          "description": "客户姓名",
          "placeholder": "{{name}}"
        },
        "phone": {
          "type": "string",
          "label": "客户电话",
          "description": "客户电话",
          "placeholder": "{{phone}}"
        },
        "email": {
          "type": "string",
          "label": "客户邮箱",
          "description": "客户邮箱",
          "placeholder": "{{email}}"
        },
        "orderId": {
          "type": "string",
          "label": "订单号",
          "description": "订单号",
          "placeholder": "{{orderId}}"
        }
      }
    }
  }
}

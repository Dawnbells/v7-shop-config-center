{
  "tabs": [
    {
      "name": "email",
      "label": "邮箱设置",
      "description": "邮箱设置",
      "prefix": "email",
      "default-values": {
        "open": false,
        "host": "",
        "port": 587,
        "username": "",
        "password": "",
        "from": "",
        "secure": false,
        "connection-timeout": 5000,
        "timeout": 5000,
        "write-timeout": 5000,
        "subject": "",
        "content": ""
      }
    },
    {
      "name": "email-template",
      "label": "邮件模板",
      "description": "邮件模板",
      "prefix": "email-template",
      "i18n": true,
      "default-values": {
        "subject": "",
        "content": ""
      }
    }
  ],
  "email": {
    "open": {
      "type": "boolean",
      "label": "开启邮件通知",
      "description": "是否开启邮件通知",
      "required": false
    },
    "host": {
      "type": "string",
      "label": "SMTP服务器地址",
      "description": "SMTP服务器地址，用于发送邮件",
      "required": true
    },
    "port": {
      "type": "number",
      "label": "端口",
      "description": "SMTP服务器端口号",
      "required": true
    },
    "username": {
      "type": "string",
      "label": "用户名",
      "description": "邮箱用户名，用于SMTP认证",
      "required": true
    },
    "password": {
      "type": "string",
      "label": "密码",
      "description": "邮箱密码，用于SMTP认证",
      "required": true
    },
    "from": {
      "type": "string",
      "label": "发件人地址",
      "description": "发件人邮箱地址",
      "required": true
    },
    "secure": {
      "type": "boolean",
      "label": "使用SSL/TLS加密",
      "description": "是否启用SSL/TLS加密连接",
      "required": false
    },
    "connection-timeout": {
      "type": "number",
      "label": "连接超时时间（毫秒）",
      "description": "建立 SMTP 连接的超时时间，单位毫秒",
      "required": false
    },
    "timeout": {
      "type": "number",
      "label": "请求超时时间（毫秒）",
      "description": "SMTP 请求/响应的超时时间，单位毫秒",
      "required": false
    },
    "write-timeout": {
      "type": "number",
      "label": "写入超时时间（毫秒）",
      "description": "SMTP 写入数据的超时时间，单位毫秒",
      "required": false
    }
  },
  "email-template": {
    "subject": {
      "type": "string",
      "label": "邮件主题",
      "description": "邮件主题",
      "required": true
    },
    "content": {
      "type": "html",
      "label": "邮件模板",
      "description": "邮件模板，支持HTML格式",
      "required": true,
      "placeholders": {
        "customer_name": {
          "type": "string",
          "label": "客户姓名",
          "description": "客户姓名",
          "placeholder": "{{customer_name}}"
        },
        "customer_phone": {
          "type": "string",
          "label": "客户电话",
          "description": "客户电话",
          "placeholder": "{{customer_phone}}"
        },
        "customer_email": {
          "type": "string",
          "label": "客户邮箱",
          "description": "客户邮箱",
          "placeholder": "{{customer_email}}"
        },
        "customer_address": {
          "type": "string",
          "label": "客户地址",
          "description": "客户收货地址",
          "placeholder": "{{customer_address}}"
        },
        "customer_region": {
          "type": "string",
          "label": "客户地区",
          "description": "客户所在地区（省/州/市等）",
          "placeholder": "{{customer_region}}"
        },
        "customer_postal_code": {
          "type": "string",
          "label": "邮编",
          "description": "客户邮政编码",
          "placeholder": "{{customer_postal_code}}"
        },
        "customer_remark": {
          "type": "string",
          "label": "客户备注",
          "description": "客户备注信息",
          "placeholder": "{{customer_remark}}"
        },
        "order_id": {
          "type": "string",
          "label": "订单号",
          "description": "订单号",
          "placeholder": "{{order_id}}"
        },
        "order_amount": {
          "type": "string",
          "label": "订单金额",
          "description": "订单金额（格式化后的字符串）",
          "placeholder": "{{order_amount}}"
        },
        "order_items": {
          "type": "string",
          "label": "订单商品明细",
          "description": "订单商品列表明细（拼接后的字符串）",
          "placeholder": "{{order_items}}"
        }
      }
    }
  }
}

  "email": {
    "open": {
      "type": "boolean",
      "label": "开启邮件通知",
      "description": "是否开启邮件通知",
      "required": true
    },
    "host": {
      "type": "string",
      "label": "SMTP服务器地址",
      "description": "SMTP服务器地址，用于发送邮件",
      "required": false
    },
    "port": {
      "type": "number",
      "label": "端口",
      "description": "SMTP服务器端口号",
      "required": false
    },
    "username": {
      "type": "string",
      "label": "用户名",
      "description": "邮箱用户名，用于SMTP认证",
      "required": false
    },
    "password": {
      "type": "string",
      "label": "密码",
      "description": "邮箱密码，用于SMTP认证",
      "required": false
    },
    "from": {
      "type": "string",
      "label": "发件人地址",
      "description": "发件人邮箱地址",
      "required": false
    },
    "secure": {
      "type": "boolean",
      "label": "使用SSL/TLS加密",
      "description": "是否启用SSL/TLS加密连接",
      "required": false
    },
    "audit_status_enabled": {
      "type": "boolean",
      "label": "审单状态通知",
      "description": "是否开启审单状态通知",
      "required": false
    },
    "delivery_status_enabled": {
      "type": "boolean",
      "label": "发货状态变更通知",
      "description": "是否开启发货状态变更通知",
      "required": false
    },
    "subscribe_update": {
      "type": "boolean",
      "label": "订阅更新邮件",
      "description": "用户是否订阅系统/订单/发货等更新通知邮件, 关闭后，将强制发送对应邮件通知",
      "required": false
    }
  },
